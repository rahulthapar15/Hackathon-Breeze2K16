<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:circleprogress="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/main_relative_layout"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"


    tools:context="su.levenetc.android.textsurface.sample.LoginActivity">


    <RelativeLayout
            android:id="@+id/scene_transition_between_elements_go_button_and_login_register_tile"
            android:elevation="8dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:layout_centerInParent="true"
            android:background="@color/colorprim">

            <TextView
                android:id="@+id/login_text_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32sp"
                android:text = "Login"
                android:textColor="@color/back"/>

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:inputType="text"
                android:layout_below="@id/login_text_heading"
                android:backgroundTint="@android:color/white"
                android:hint="User ID"
                android:textColorHint="#fff"
                android:editable="true"
                android:maxLength="10"
                android:maxLines="1"
                android:singleLine="true" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/submit"
                android:onClick="submitClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkcircle"
                app:backgroundTint="@color/back"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    <View
        android:id="@+id/scene_transition_between_elements_dummy_view_and_register_tile"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        />


</RelativeLayout>
